<% if @recipe.errors.any? %>
    <% @recipe.errors.full_messages.each do |msg| %>
    <%= msg %>
    <% end %>
<% end %>

<%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br>
    <%= f.label :vegetarian %>
    <%= f.select :vegetarian, [true, false] %> <br>
    <%= f.label :duration_in_min, "Prep Time in minutes" %>
    <%= f.number_field :duration_in_min, min: 0 %> <br>
    <%= f.label :difficulty %>
    <%= f.select :difficulty, ["easy", "medium", "hard"], {include_blank: "Choose Difficulty"} %><br>
    <%= f.label :ingredients %> <br>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br>
    <%= f.submit %>
    <% end %>