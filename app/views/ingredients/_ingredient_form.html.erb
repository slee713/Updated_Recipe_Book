<% if @ingredient.errors.any? %>
    <% @ingredient.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>

<%= form_for @ingredient do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :recipes %><br>
    <%= f.collection_check_boxes :recipe_ids, Recipe.all, :id, :name %><br>
    <%= f.submit %>
    <% end %>